{
  "name": "evgeny-zinder/slack-bot",
  "description": "Slack bot PHP framework",
  "license": "MIT",
  "keywords": ["slack", "bot"],
  "homepage": "https://github.com/evgeny-zinder/slack-bot",
  "type": "library",
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.4.0",
    "symfony/console": "2.6",
    "symfony/config": "2.6",
    "symfony/yaml": "2.6",
    "textalk/websocket": "1.0.*",
    "pimple/pimple": "~3.0",
    "capmousse/react-restify": "~0.2",
    "mtdowling/cron-expression": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "4.1.*",
    "mockery/mockery": "0.9.*",
    "pdepend/pdepend" : "1.1.0",
    "squizlabs/php_codesniffer": "1.5.6",
    "phpmd/phpmd": "1.5.1",
    "phploc/phploc": "2.1.5",
    "sebastian/phpcpd": "2.0.2"
  },
  "autoload": {
    "psr-4": {
      "slackbot\\": "src/slackbot",
      "tests\\slackbot\\": "tests"
    }
  }
